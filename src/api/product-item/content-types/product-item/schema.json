{
  "kind": "collectionType",
  "collectionName": "product_items",
  "info": {
    "singularName": "product-item",
    "pluralName": "product-items",
    "displayName": "Product Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "product_group": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-group.product-group",
      "inversedBy": "product_items"
    },
    "name": {
      "type": "string"
    },
    "displayName": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "price": {
      "type": "decimal"
    },
    "discountedPrice": {
      "type": "decimal"
    },
    "origin": {
      "type": "customField",
      "customField": "plugin::country-select.country"
    },
    "sizes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::size.size"
    }
  }
}
